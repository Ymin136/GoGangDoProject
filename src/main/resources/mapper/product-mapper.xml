<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gogangdo.mapper.ProductMapper">
	<select id="selectProductNo" resultType="int">
		select productno_seq.nextval from dual
	</select>
	<insert id="registerProduct" parameterType="product">
		insert into shop_product 
		values(#{product_no},#{category_no},#{product_name},#{product_price},#{product_stock},0,#{product_desc},#{sub_category_no})	
	</insert>
	<select id="selectProductList" resultType="product" parameterType="int">
		select product_name, product_price from shop_product
	</select>
	<select id="selectProductCount" resultType="int">
		select count(*) from shop_product 
	</select>
	<select id="selectProductLowPrice" resultType="product" parameterType="int">
		select product_name, product_price from shop_product order by product_price
	</select>
</mapper>
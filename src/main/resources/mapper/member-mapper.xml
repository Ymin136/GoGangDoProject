<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gogangdo.mapper.MemberMapper">
	<insert id="insertmember" parameterType="member">
		insert into SHOP_USER
		values(USER_SEQ.nextval, 0, #{id}, #{pw}, #{user_name}, #{tel}, #{address}, #{email})
	</insert>
	<select id="login" parameterType="map" resultType="member">
		select * from shop_user where id = #{id} and pw = #{pw}
	</select>
	<update id="userUpdate" parameterType="member">
		update shop_user set pw = #{pw}, user_name=#{user_name}, tel=#{tel}, address1=#{address1}, email=#{email}, address2=#{address2}, post=#{post} 
		where id = #{id}
	</update>
	<delete id="userDelete" parameterType="String">
		delete from shop_user where id = #{id}
	</delete>
	<select id="selectid" parameterType="String" resultType="String">
		select id from shop_user where id = #{id}
	</select>
	<select id="selectMember" resultType="member">
		select * from shop_user
	</select>
	<select id="selectproduct" resultType="product">
		select * from shop_product 
	</select>
	<update parameterType="member" id="updateMember">
		update shop_userset user_grade = #{user_grade},id = #{id},user_name = #{user_name},tel = #{tel},address1 = #{address1},address2 = #{address2},email = #{email},post = #{post}where user_no = #{user_no} 
	</update>
	<update parameterType="map" id="updateMemberAccess">
		update shop_user set user_grade = #{user_grade}where id = #{id} 
	</update>
	<delete parameterType="String" id="deleteMember">
		delete from shop_userwhere user_no = #{user_no} 
	</delete>
</mapper>
<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.gogangdo.mapper.ProductMapper">
	<select id="selectProductNo" resultType="int">
		select productno_seq.nextval from dual
	</select>
	<select id="selectProductList" parameterType="int" resultType="product">
		select * from (select ceil(rownum / 20) as pageNo, pv.* from product_view pv)
		where pageNo = #{pageNo}
	</select>
	<select id="selectProductCount" resultType="int">
		select count(*) from product
	</select>
</mapper>